@model CSRMGMT.ViewModel.ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
     ViewData["Title"] = "Forgot Password";
}
  <div class="adminLogin_form">
                       
                        <h2 class="login_title">Forgot Password</h2>
                     
                       @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-vertical login-form", @autocorrect = "off", @autocapitalize = "off", @autocomplete = "off", id = "loginInputForm" }))
                                {
                            <div class="row">
                                <div class="form-group col-md-12 mb-3">
                                    <i class="bi bi-person"></i>
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder="User Name" })                           
                                </div>
                               
                            </div>
                            <div class="row mt-3">
                            


                                <div class="form-group col-md-12">
                                    
                                     <button type="submit" id="btnSubmit" class="btn btn-login">
                                            Submit <i class="bi bi-box-arrow-in-right ms-2"></i>
                                        </button>
                                </div>
                                @* @if(TempData[Constants.ForgotErrorMessage]!=null) *@
                                {
                                <div class="alert alert-error alert-icon">
                                    @* <em class="icon ni ni-check-circle"></em> <strong>@TempData[Constants.ForgotErrorMessage].ToString()</strong>  *@
                                 </div>
                                }
                            </div>                        
                         }
                    </div>