@model CSRMGMT.ViewModel.LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";   
    ViewData["Title"] = "Login";
    var items = ViewBag.Items as List<SelectListItem>;
}
<div class="admin_login_wraper">
            <div class="row no-gutters">
                <div class="col-md-6">
                    <div class="admin_img">
                        <img src="~/assets/images/adminLogin.jpg" class="img-fluid w-100" alt="">
                    </div>
                </div>
                <div class="col-md-6">
                   <div class="adminLogin_form">
                        <div class="logo">
                            <img src="~/assets/images/logo-dark.png" alt="">
                        </div>
                        <h2 class="login_title">Admin Login</h2>
                     
                       @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-vertical login-form", @autocorrect = "off", @autocapitalize = "off", @autocomplete = "off", id = "loginInputForm" }))
                                {
                            <div class="row">
                                <div class="form-group col-md-12 mb-3">
                                    <i class="bi bi-person"></i>
                           
                                    @Html.TextBoxFor(m => m.userid, new { @class = "form-control", @placeholder="User Name" })                           
                                </div>
                                <div class="form-group col-md-12">
                                    <i class="bi bi-eye-slash"></i>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" , @placeholder="Password" ,@type="Password"})                          
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="form-group col-md-6">
                                    <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="flexcheckboxDefault" id="flexcheckboxDefault1">
                                    <label class="form-check-label" for="flexcheckboxDefault1">
                                     Remember me
                                    </label>
                                  </div>
                                </div>
                                <div class="form-group text-right col-md-6">
                                   <a href="/Account/ForgotPassword">Forgot Password</a>
                                </div>

                                <div class="form-group col-md-12">
                                    
                                     <button type="submit" id="btnSubmit" class="btn btn-login">
                                            Login <i class="bi bi-box-arrow-in-right ms-2"></i>
                                        </button>
                                </div>
                                @if(TempData["ErrorMessage"]!=null) 
                                {
                                <div class="alert alert-danger col-12">
                                     <strong><em class='icon ni ni-alert-circle-fill'></em> @TempData["ErrorMessage"]</strong> 
                                 </div>
                                }
                            </div>                        
                         }
                    </div>
                  
                </div>

            </div>
        </div>
  